.contents.row
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.label :image
      %br/
      = f.file_field :image
    .field
      = f.label :nickname
      %em (12 characters maximum)
      %br/
      = f.text_field :nickname, autofocus: true, maxlength: "12"
    .field
      = f.label :username
      %em (12 characters maximum)
      %br/
      = f.text_field :username, autofocus: true, maxlength: "12", value: "@"
    .field
      = f.label :email
      %br/
      = f.email_field :email
    .field
      = f.label :password
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off"
    .actions
      = f.submit "Sign up"
