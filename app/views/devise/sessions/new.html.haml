.all-contents
  .signin
    .signin-title
      ログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .signin-email
        = f.label :email, class: 'signin-email__label'
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'signin-email__email_field'
      .signin-password
        = f.label :password, class: 'signin-password__label'
        = f.password_field :password, autocomplete: "current-password", class: 'signin-password__password_field'
      -# - if devise_mapping.rememberable?
      -#   .field
      -#     = f.check_box :remember_me
      -#     = f.label :remember_me
      .signin-submit
        = f.submit "Log in", class: 'signin-submit__btn'
    -# = render "devise/shared/links"
